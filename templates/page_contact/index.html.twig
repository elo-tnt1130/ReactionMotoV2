{% extends 'base_front.html.twig' %}

{% block meta %}
  		<meta name="description" content="{{page.metadescr}}">
		<meta name="keywords" content="{{page.metakw}}">
  {% endblock %}

{% block title %}{{page.libPage}}
{% endblock %}

{% block body %}
	{{parent()}}
	{% if not form.vars.valid %}
		<div class="alert alert-danger">
			V√©rifiez les donn√©es saisies ;)
		</div>
	{% endif %}
	<main class="container pb-5 position">
		<section class="row pb-4">
			<article class="col-12 col-lg-6 my-4 justify-content-center">

				<div class="contactForm mx-3">

					{{form_start(form)}}

					<div class="form-group">
						{{form_label (form.firstname)}}
						<span class="clickable">*</span>
						{{form_widget (form.firstname)}}
					</div>

					<div class="form-group">
						{{form_label (form.lastname)}}
						<span class="clickable">*</span>
						{{form_widget (form.lastname)}}
					</div>

					<div class="form-group">
						{{form_label (form.tel)}}
						<span class="clickable">*</span>
						{{form_widget (form.tel)}}
					</div>

					<div class="form-group">
						{{form_label (form.mail)}}
						<span class="clickable">*</span>
						{{form_widget (form.mail)}}
					</div>

					<div class="form-group">
						{{form_label (form.subject)}}
						<span class="clickable">*</span>
						{{form_widget (form.subject)}}
					</div>

					<div class="form-group">
						{{form_label (form.message)}}
						<span class="clickable">*</span>
						{{form_widget (form.message)}}
					</div>


					{{form_rest(form)}}

					<button class="btn btn-danger mb-2" type='submit'>Envoyer</button>
					{# <button class="g-recaptcha" data-sitekey="6LcyDLQbAAAAAGgQU-ByCB9ybvpew2eH2H87ymCw" data-callback='onSubmit' data-action='submit'data-sitekey="reCAPTCHA_site_key" data-callback='onSubmit' data-action='submit'>Envoyer</button> #}

					{{form_end(form)}}

				</div>

				<hr
				id="hr-contact">
			<!-- FIN FORMULAIRE DE CONTACT -->
			</article>

			<article
				class="col-12 col-lg-6 mt-3 mb-5 justify-content-center">

				<!-- INFOS DE CONTACT -->
				<figure class="container contact">
					<h4 class="h4">Informations de contact</h4>
					<div class="flex-contact mb-2 pb-2">
						<address>
							<strong>
								üèç Reaction Moto
							</strong><br>
							T√©l. / Fax :
							<a href="tel:0130304064" class='clickable'>{{ets.telEts}}</a>
							/
							<a href="tel:0130304128" class='clickable'>{{ets.faxEts}}
							</a><br>
							E-mail :
							<a href="mailto:{{ets.mail1ets}}" class='clickable'>
								{{ets.mail1ets}}</a>
							/
							<a href="{{ets.mail2ets}}" class='clickable'>
								{{ets.mail2ets}}</a>
						</address>
					</div>

					<div class="flex-contact mb-2 pb2">
						<strong>Horaires</strong>
						<br>
						{{ets.horaires|raw}}
					</div>
				</figure>
				<!-- FIN INFOS DE CONTACT -->

				<!-- API GOOGLE MAP -->
				<figure class='container pb-5'>
					<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2614.7431032730274!2d2.1122884509780877!3d49.053507994801265!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e65f87c73be5f1%3A0x370cf2b963062331!2sR%C3%A9action%20Moto!5e0!3m2!1sfr!2sfr!4v1625473911595!5m2!1sfr!2sfr" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
				</figure>
				<!-- FIN API GOOGLE MAP -->
			</article>
		</section>

	</main>

{% endblock %}
