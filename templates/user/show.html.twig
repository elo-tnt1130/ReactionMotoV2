{% extends 'base.html.twig' %}

{% block title %}
	Utilisateur -
	{{ user.pseudo }}
{% endblock %}

{% block body %}

	<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 p-4">
		<div class="col-12">
			<h1>Utilisateur -
				{{ user.pseudo }}
			</h1>
			<a href="{{ path('user_index') }}" class="btn btn-info">
				<i class="fa fa-arrow-left"></i>
				Retour à la liste
			</a>
		</div>
		<div class="container my-3">
			<table class="table">
				<tbody>
					<tr>
						<th class="cellwidth">Avatar</th>
						<td>
							{% if user.avatarUser !="" %}
								<img src="/img/{{ user.avatarUser }}" alt="{{ user.pseudo }}" class="img-edit img-fluid mx-auto">
							{% else %}
								<img src="/img/default-user.png" alt="default_image" class="img-edit img-fluid mx-auto">
							{% endif %}
						</td>
					</tr>

					<tr>
						<th class="cellwidth">Pseudo</th>
						<td>{{ user.pseudo }}</td>
					</tr>

					<tr>
						<th class="cellwidth">Prénom</th>
						<td>{{ user.prenomUser }}</td>
					</tr>

					<tr>
						<th class="cellwidth">Nom</th>
						<td>{{ user.nomUser }}</td>
					</tr>

					<tr>
						<th class="cellwidth">Rôle</th>
						<td>
							{% for role in user.roles %}
								{% if role == "ROLE_ADMIN" %}
									Administrateur
								{% elseif role == "ROLE_DEV" %}
									Développeur
									{# {% elseif role == "ROLE_USER" %}
																																													Utilisateur #}
								{% endif %}
							{% endfor %}
						</td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="container">
			<div class="row">
				<a href="{{ path('user_edit', {'id': user.id})}}" class="btn btn-info mr-3">
					<i class="fa fa-pen"></i>
					Modifier</a>

				{{ include('user/_delete_form.html.twig') }}
			</div>
		</div>

	</main>
{% endblock %}
