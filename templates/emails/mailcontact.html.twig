{# {% apply html_to_markdown %} #}

{# {% apply inline_css %} #}

<div style='background-color:#ebebeb; padding-bottom:3rem; font-family:Arial, sans-serif; color:#333333;'> 
		
	<div style='justify-content:center; background-color: #333333; padding:1rem; width:100%;'>
		<img src="{{ email.image('@images/logo_reaction-moto.png') }}" alt="logo-reaction-moto" style='width:15%; display:inline;'>
	</div>

	<div style='padding:2rem'>
		<h1 style='text-align:center;'>
			<strong>Helloooooo Cricri !!!</strong>
		</h1>

		<p style='text-align:center; font-size:19px; padding: 0 25px; line-height: 1.5;'>
			Voici un email en provenance de ton site !<br>Peux-tu regarder ce que veut
			<strong>{{contact.firstname}}</strong>
			<strong>{{contact.lastname}}</strong>
			?
		</p>
		<p style='text-align:center; font-size:20px; padding: 20 25px; line-height: 35px; font-weight:bold;'>
			C'est à propos de :
			<span style="font-size:21px; color: #cc0000;">
				{{contact.subject}}
			</span>
			<br>
			<span style="font-style:italic;">{{contact.message}}</span>
		</p>

		<p style='text-align:center; font-size:18px; padding: 0 25px; line-height: 1;'>
			Tu peux le rappeler au
			<span style="font-size:21px; color: #cc0000;"><a style='text-decoration:none; font-size:21px; color: #cc0000;' href="tel:+{{contact.tel}}">{{contact.tel}}</a></span>
			ou lui répondre par email à cette adresse :
			<span style="font-size:21px; color: #cc0000;"><a style='text-decoration:none; font-size:21px; color: #cc0000;' href="mailto:{{contact.mail}}">{{contact.mail}}</a></span>.
		</p>

		<p style='text-align:center; font-size:18px; padding: 0 25px; line-height: 1.5;'>
			Bien cordialement,<br>
			Réaction Moto
		</p>
	</div>
</div>

