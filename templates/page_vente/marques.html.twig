{% extends 'base_front.html.twig' %}

{% block meta %}
  		<meta name="description" content="{{page.metadescr}}">
	  	<meta name="keywords" content="{{page.metakw}}">  
{% endblock %}

{% block title %}{{page.libPage}}{% endblock %}

{% block body %}
    <main class="pb-5 position">
        <section class="row d-flex justify-content-center pb-5 mb-5 mx-3">

        {% for marque in marques %}
            <article class="col-lg-4 col-sm-12 d-flex align-items-stretch">
                <div class="card mx-auto my-2 p-1">
                    <img src="/img/{{marque.logoMarque}}" class="card-img-top mt-3 pt3 img-catalogue" alt="...">
                    <div class="card-body">
                        <div class="mb-5">
                            <h3 class="card-title text-center">{{marque.libMarque}}</h3>
                            <p class="card-text">{{marque.resumeMarque|raw}}
                        </div>
                        <div class="row justify-content-center card-div-btn mt-5">

                            {% if marque.libMarque == 'Benelli' %}
                                <a href="{{path('page_benelli')}}" class="btn btn-danger card-btn">En savoir plus</a>
                            {% elseif marque.libMarque == 'Brixton' %}
                                <a href="{{path('page_brixton')}}" class="btn btn-danger card-btn">En savoir plus</a>
                            {% else %}
                                <a href="{{path('page_occasions')}}" class="btn btn-danger card-btn">En savoir plus</a>
                            {% endif %}

                        </div>
                    </div>
                </div>
            </article>
        {% endfor %}
        </section>
    </main>

{% endblock %}
