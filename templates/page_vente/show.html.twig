{% extends 'base_front.html.twig' %}

{% block meta %}
	<meta name="description" content="Venez trouver votre bonheur, nos motos vous attendent !">
	<meta name="keywords" content="moto benelli brixton yamaha suzuki kawasaki mv agusta moto morini laverda ducati motos vente neuf occasion occasions leboncoin original ancien moderne garantie">
{% endblock %}


{% block title %}
	{{modele.libModele|upper}}
{% endblock %}


{% block body %}

	<main
		class="py-5 position">

		{# <div class="phone">
									<i class='fa fa-phone'></i>
								</div> #}

		{% if modele.checkOccasion == 0 %}

			<section class="brand_presentation justify-content-center text-center">
				<div class="container text-center p-1 mt-2">
					<h3 class="text-danger">
						{{modele.marque.libMarque|upper}}
						-
						{{modele.libModele|upper}}</h3>
				</div>
			</section>

			<hr class="separator">

			<section class="d-flex row justify-content-center mb-5">
				<div style="width: 85%;" class="d-flex row">
					<article class="justify-content-center col-12 py-5">
						<p class="text-center" style="font-size:2rem">
							A partir de
							<font color="#cc0000">{{modele.prixMoto}}</font>
							€
						</p>
					</article>

					<article class="col-lg-5 col-md-12 mb-2">
						<h5 class="text-danger">Caractéristiques techniques</h5>
						<div class="row ml-2">
							<div class="col-6">
								<p>
									Cylindrée :
									<br>
									Puissance :
									<br>
									Couple :
									<br>
									Consommation estimée :
								</p>
							</div>
							<div class="col-6">
								<p>
									{{modele.moteur.cylindree}}
									cm3
									<br>
									{{modele.moteur.puissanceCh}}
									ch
									<br>
									{{modele.moteur.coupleNm}}
									nm
									<br>
									{{modele.consoNeuf}}
									L/100 km
								</p>
							</div>
						</div>

						<h5 class="text-danger">Dimensions</h5>
						<div class="row ml-2">
							<div class="col-6">
								<p>Longueur :
									<br>
									Largeur :
									<br>
									Hauteur de selle :
									<br>
									Poids :
								</p>
							</div>
							<div class="col-6">
								<p>{{modele.longueurNeuf}}
									mm
									<br>
									{{modele.largeurNeuf}}
									mm
									<br>
									{{modele.hauteurSelleNeuf}}
									mm
									<br>
									{{modele.poidsNeuf}}
									kg
								</p>
							</div>
						</div>

						<h5 class="text-danger">Autres caractéristiques</h5>
						<div class="row ml-2">

							<div class="col-12 mb-3">
								<p>Permis</p>
								<div class="col-12">
									{% if modele.permis.libPermis == "A" %}
										<img src="/img/symbole-permisA.svg" alt="symbole-permisA" class="imgFO">
									{% elseif modele.permis.libPermis == "A2" %}
										<img src="/img/symbole-permisA2.svg" alt="symbole-permisA2" class="imgFO">
										<img src="/img/symbole-permisA.svg" alt="symbole-permisA" class="imgFO">
									{% else %}
										<img src="/img/symbole-permisA1.svg" alt="symbole-permisA1" class="imgFO">
										<img src="/img/symbole-permisA2.svg" alt="symbole-permisA2" class="imgFO">
										<img src="/img/symbole-permisA.svg" alt="symbole-permisA" class="imgFO">
									{% endif %}
								</div>
							</div>

							<div class="col-12 mb-3">
								<p>Coloris disponibles</p>
								<div class="col-12">
									{% for color in modele.couleurs %}
										<img src="/img/{{color.imgColor}}" alt="img-{{color.libCouleur}}" class="imgFO">
									{% endfor %}
								</div>
							</div>

							<div class="col-12 mb-3">
								{% if modele.aidesConduite != null %}
									<p>Aides à la conduite</p>
									<div class="col-12">
										{% for aide in modele.aidesConduite %}
											<li style="list-style:none">
												{{aide.libAideConduite}}
											</li>
										{% endfor %}
									</div>
								{% endif %}

								<div class="col-12 mb-3">
									<a class="btn btn-danger" href="{{asset(modele.ficheTechniqueNeuf)}}" target="_blank" role="button">
										<div class="row">
											<div class="pl-3" id="dl">Téléchargez la fiche technique !</div>
											<div class="pl-3" id="dl-xs">Spécifications</div>
											<div>
												<i class="fa fa-download px-1 pr-2"></i>
											</div>
										</div>
									</a>
								</div>
							</div>
						</article>

						<article class="col-lg-6 col-md-12 stretch align-self-center justify-content-center mb-5 pb-2">
							<div id="carouselProduct" class="carousel slide carousel-fade" data-ride="carousel">
								<div class="carousel-inner">
									{% if modele.img1Moto != "" %}
										<div class="carousel-item active">
											<img src="/img/{{modele.img1Moto}}" class="mx-auto d-block w-50" alt="...">
										</div>
									{% endif %}
									{% if modele.img2Moto != "" %}
										<div class="carousel-item">
											<img src="/img/{{modele.img2Moto}}" class="mx-auto d-block w-50" alt="...">
										</div>
									{% endif %}
									{% if modele.img3Moto != "" %}
										<div class="carousel-item">
											<img src="/img/{{modele.img3Moto}}" class="mx-auto d-block w-50" alt="...">
										</div>
									{% endif %}
									{% if modele.img4Moto != "" %}
										<div class="carousel-item">
											<img src="/img/{{modele.img4Moto}}" class="mx-auto d-block w-50" alt="...">
										</div>
									{% endif %}
								</div>

								<a class="carousel-control-prev" href="#carouselProduct" role="button" data-slide="prev">
									<span aria-hidden="true">
										<i class='fas fa-chevron-left chevron'></i>
									</span>
									<span class="sr-only">Previous</span>
								</a>

								<a class="carousel-control-next" href="#carouselProduct" role="button" data-slide="next">
									<span aria-hidden="true">
										<i class='fas fa-chevron-right chevron'></i>
									</span>
									<!-- <span class="carousel-control-next-icon" aria-hidden="true"></span> -->
									<span class="sr-only">Next</span>
								</a>

							</div>
						</article>
					</div>
				</section>

			{% else %}

				<section class="brand_presentation justify-content-center text-center">
					<div class="container w-75 text-center p-1 mt-2">
						<h3 class="text-danger mb-4">{{modele.libModele|upper}}</h3>
						<p>{{modele.descrOccasion|raw}}</p>
					</div>
				</section>

				<hr class="separator">

				<section class="d-flex row justify-content-center mb-5">
					<div style="width:80%;" class="d-flex row">

						<article class="justify-content-center col-12 py-5">
							<p class="text-center" style="font-size:1.35rem">
								<font color="#cc0000">{{modele.prixMoto}}</font>
								€
							</p>
						</article>

						<article class="col-lg-6 col-md-12 mb-2">
							<h5 class="text-danger">Caractéristiques</h5>
							<div class="row ml-2">
								<div class="col-6">
									<p>
										Kilométrage :
									</p>
								</div>
								<div class="col-6">
									<p>
										{{modele.kilometrageOccasion}}
										km
									</p>
								</div>
							</div>

							<h5 class="text-danger">Travaux effectués</h5>
							<div class="row ml-2">
								<p>
									{{modele.travauxOccasion|raw}}
								</p>
							</div>

							<h5 class="text-danger">Autres caractéristiques</h5>
							<div class="row ml-2">
								<div class="col-12 mb-3">
									<p>Permis</p>
									<div class="col-12">
									{% if modele.permis.libPermis == "A" %}
										<img src="/img/symbole-permisA.svg" alt="symbole-permisA" class="imgFO">
									{% elseif modele.permis.libPermis == "A2" %}
										<img src="/img/symbole-permisA2.svg" alt="symbole-permisA2" class="imgFO">
										<img src="/img/symbole-permisA.svg" alt="symbole-permisA" class="imgFO">
									{% else %}
										<img src="/img/symbole-permisA1.svg" alt="symbole-permisA1" class="imgFO">
										<img src="/img/symbole-permisA2.svg" alt="symbole-permisA2" class="imgFO">
										<img src="/img/symbole-permisA.svg" alt="symbole-permisA" class="imgFO">
									{% endif %}
									</div>
								</div>

								<div class="col-12 mb-3">

									{% if modele.aidesConduite != null %}
										<p>Aides à la conduite</p>
										<div class="col-12">
											{% for aide in modele.aidesConduite %}
												<li style="list-style:none">
													{{aide.libAideConduite}}
												</li>
											{% endfor %}
										</div>
									{% endif %}
								</div>

								<div class="col-12 mb-3">
									{% if modele.equipementsOccasion != null %}
										<p>Equipements</p>
										<div class="col-12">
											{{modele.equipementsOccasion|raw}}
										</div>
									{% endif %}
								</div>
							</div>

							<div>
								<a class="btn btn-danger mb-3" href="{{modele.lienOccasion}}" target="_blank" role="button">
									<div class="row">
										<div class="px-3" id="dl">Aller voir sur leboncoin</div>
										<div class="px-3" id="dl-xs">leboncoin</div>
									</div>
								</a>
							</div>
						</article>

						<article class="col-lg-6 col-md-12 stretch align-self-center justify-content-center mb-5 pb-2">
							<div id="carouselProduct" class="carousel slide carousel-fade" data-ride="carousel">
								<div class="carousel-inner">
									{% if modele.img1Moto != "" %}
										<div class="carousel-item active">
											<img src="/img/{{modele.img1Moto}}" class="mx-auto d-block w-50" alt="...">
										</div>
									{% else %}
										<div class="carousel-item active">
											<img src="/img/default.png" class="mx-auto d-block w-25" alt="...">
										</div>
									{% endif %}

									{% if modele.img2Moto != "" %}
										<div class="carousel-item">
											<img src="/img/{{modele.img2Moto}}" class="mx-auto d-block w-50" alt="...">
										</div>
									{% else %}
										<div class="carousel-item active">
											<img src="/img/default.png" class="mx-auto d-block w-25" alt="...">
										</div>
									{% endif %}

									{% if modele.img3Moto != "" %}
										<div class="carousel-item">
											<img src="/img/{{modele.img3Moto}}" class="mx-auto d-block w-50" alt="...">
										</div>
									{% else %}
										<div class="carousel-item active">
											<img src="/img/default.png" class="mx-auto d-block w-25" alt="...">
										</div>
									{% endif %}

									{% if modele.img4Moto != "" %}
										<div class="carousel-item">
											<img src="/img/{{modele.img4Moto}}" class="mx-auto d-block w-50" alt="...">
										</div>
									{% else %}
										<div class="carousel-item active">
											<img src="/img/default.png" class="mx-auto d-block w-25" alt="...">
										</div>
									{% endif %}
								</div>

								<a class="carousel-control-prev" href="#carouselProduct" role="button" data-slide="prev">
									<span aria-hidden="true">
										<i class='fas fa-chevron-left chevron'></i>
									</span>
									<span class="sr-only">Previous</span>
								</a>

								<a class="carousel-control-next" href="#carouselProduct" role="button" data-slide="next">
									<span aria-hidden="true">
										<i class='fas fa-chevron-right chevron'></i>
									</span>
									<span class="sr-only">Next</span>
								</a>
							</div>
						</article>
					</div>
				</section>

			{% endif %}

		</main>
	{% endblock %}
