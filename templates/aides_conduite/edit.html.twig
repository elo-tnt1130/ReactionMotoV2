{% extends 'base.html.twig' %}

{% block title %}Modifier les aides à la conduite{% endblock %}

{% block body %}

	<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mb-3">
		<div class="col-12">
			<h1>Modifier les aides à la conduite -
				{{ aides_conduite.libAideConduite }}</h1>
			<a href="{{ path('aides_conduite_index') }}" class="btn btn-info">
				<i class="fa fa-arrow-left"></i>
				Retour à la liste
			</a>
		</div>


		<div class="container mt-3">
				{{ form_start(form)}}
				{{form_label (form.lib_aide_conduite)}}  <font style="color:red">*</font>
				{{form_widget (form.lib_aide_conduite)}}
				{{ form_rest(form)}}
				<div class="row mt-3">
					<button type="submit" class="btn btn-info mr-2"><i class="fa fa-pen"></i> Modifier</button>
					{{ include('aides_conduite/_delete_form.html.twig') }}
				</div>
				{{ form_end(form)}}
		</div>

	</main>
{% endblock %}
