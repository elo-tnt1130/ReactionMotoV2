{% extends 'base.html.twig' %}

{% block title %}Services et catégories de pages
{% endblock %}

{% block body %}

	<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 p-4">
		<div class="col-12">
			<h1>Services -
				{{ service.libService }}</h1>
			<a href="{{ path('services_index') }}" class="btn btn-info">
				<i class="fa fa-arrow-left"></i>
				Retour à la liste
			</a>
		</div>

		<div class="container my-3">
			<table class="table">
				<tbody>
					<tr>
						<th class="cellwidth">Service ou catégorie de page(s) :</th>
						<td>{{ service.libService }}</td>
					</tr>
				</tbody>
			</table>

		</div>

		<div class="container">
			<div class="row">
				<a href="{{ path('services_edit', {'id': service.id})}}" class="btn btn-info mr-3">
					<i class="fa fa-pen"></i>
					Modifier</a>

				{{ include('services/_delete_form.html.twig') }}
			</div>
		</div>
	</main>

{% endblock %}
