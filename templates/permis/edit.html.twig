{% extends 'base.html.twig' %}

{% block title %}
	Modifier le permis -
	{{ permis.libPermis }}
{% endblock %}

{% block body %}

	<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mb-3">
		<div class="col-12">
			<h1>Modifier le permis -
				{{ permis.libPermis }}</h1>
			<a href="{{ path('permis_index') }}" class="btn btn-info">
				<i class="fa fa-arrow-left"></i>
				Retour Ã  la liste
			</a>
		</div>

		<div class="container mt-3">

			{{ form_start(form)}}

			<div class="mb-3">
				{{form_label (form.lib_permis)}}
				<font style="color:red">*</font>
				{{form_widget (form.lib_permis)}}
			</div>

			<div class="mb-3">
				{{form_label (form.symbole_permis)}}
				<div>
					{% if permis.symbolePermis !="" %}
						<img src="/img/{{ permis.symbolePermis }}" alt="{{ permis.libPermis }}" class="mb-2 img-edit">
					{% else %}
						<img src="/img/default.png" alt="default_image" class="mb-2 img-edit">
					{% endif %}
					{{form_widget (form.symbole_permis)}}
					{{form_help (form.symbole_permis)}}
				</div>
			</div>

			{{ form_rest(form)}}
			<div class="row mt-3">
				<button type="submit" class="btn btn-info mr-2">
					<i class="fa fa-pen"></i>
					Modifier</button>
				<a href="{{path('permis_delete', {'id':permis.id})}}" class="btn btn-danger mr-2">
					<i class="fa fa-trash"></i>
					Supprimer</a>
			</div>
			{{ form_end(form)}}

		</div>

	</main>
{% endblock %}
