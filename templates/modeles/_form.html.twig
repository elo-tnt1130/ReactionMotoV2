					{{form_label (form.aides_conduite)}}
					{{form_widget (form.aides_conduite)}}
				</div>

				<div class="mb-3 col-8">
					{{form_label (form.img1_moto)}}
					<font style="color:red">*</font>
					<div>
						<div>
							{% if modele.img1Moto !="" %}
								<img src="/img/{{ modele.img1Moto}}" alt="{{ modele.libModele }}" class="mx-auto mb-2 img-edit">
							{% else %}
								<img src="/img/default.png" alt="default_image" class="mx-auto d-block mb-2 img-edit">
							{% endif %}
						</div>
						<div>
							{{form_widget (form.img1_moto)}}
							{{form_help (form.img1_moto)}}
						</div>
					</div>
				</div>
			</div>

		</div>

		<div class="row justify-content-around mt-3 pt-3 modelformcard">
