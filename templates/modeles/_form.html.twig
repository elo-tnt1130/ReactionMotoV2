							<img src="/img/{{ modele.img3Moto }}" alt="{{ modele.libModele }}" class="mx-auto d-block mb-2 img-edit">
						{% else %}
							<img src="/img/default.png" alt="default_image" class="mx-auto d-block mb-2 img-edit">
						{% endif %}
						{{form_widget (form.img3_moto)}}
						{{form_help (form.img3_moto)}}
					</div>
				</div>

				<div class="mb-3 mx-5">
					{{form_label (form.img4_moto)}}
