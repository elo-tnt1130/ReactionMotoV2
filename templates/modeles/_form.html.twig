{{ form_start(form) }}

<div class="col-12 mb-2">
	<section>
		<h3>L'essentiel</h3>
		<div class="row justify-content-around mt-3 pt-3 modelformcard">
			<div class="col-12 row justify-content-around">
				<div class="mb-3">
					{{form_label (form.marque)}}
					<font style="color:red">*</font>
					{{form_widget (form.marque)}}
				</div>

				<div class="mb-3">
					{{form_label (form.lib_modele)}}
					<font style="color:red">*</font>
					{{form_widget (form.lib_modele)}}
				</div>

				<div class="mb-3">
					{{form_label (form.prix_moto)}}
					<font style="color:red">*</font>
					{{form_widget (form.prix_moto)}}
				</div>

				<div class="mb-3">
					{{form_label (form.permis)}}
					<font style="color:red">*</font>
					{{form_widget (form.permis)}}
				</div>
			</div>

			<div class="col-12 justify-content-around row">
