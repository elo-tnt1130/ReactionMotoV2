{% extends 'base.html.twig' %}

{% block title %}Modifier une image
{% endblock %}

{% block body %}

	<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mb-3">
		<div class="col-12">
			<h1>Modifier l'image</h1>
			<a href="{{ path('images_index') }}" class="btn btn-info">
				<i class="fa fa-arrow-left"></i>
				Retour Ã  la liste
			</a>
		</div>

		<div class="container mt-3">

			{{ form_start(form)}}

			<div class="mb-3">
				{{form_label (form.lib_img)}}
				<font style="color:red">*</font> <br>
				{% if image.libImg !="" %}
					<img src="/img/{{ image.libImg }}" alt="{{ image.libImg }}" class="w-25 img-fluid mx-auto mb-3">
				{% else %}
					<img src="/img/default.png" alt="default_image" class="w-25 img-fluid mx-auto">
				{% endif %}
				{{form_widget (form.lib_img)}}
				{{form_help (form.lib_img)}}
			</div>

			<div class="mb-3">
				{{form_label (form.descr_img)}}
				{{form_widget (form.descr_img)}}
			</div>

			<div class="mb-3">
				{{form_label (form.services)}}
				<font style="color:red">*</font>
				{{form_widget (form.services)}}
			</div>

			{{ form_rest(form)}}
			<div class="row mt-3">
				<button type="submit" class="btn btn-info mr-2">
					<i class="fa fa-pen"></i>
					Modifier</button>
				<a href="{{path('images_delete', {'id':image.id})}}" class="btn btn-danger mr-2">
					<i class="fa fa-trash"></i>
					Supprimer</a>
			</div>
			{{ form_end(form)}}

		</div>

	</main>
{% endblock %}
