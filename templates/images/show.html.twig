{% extends 'base.html.twig' %}

{% block title %}Images
{% endblock %}

{% block body %}
	<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 p-4">
		<div class="col-12">
			<h1>Image -
				{{ image.id }}
			</h1>
			<a href="{{ path('images_index') }}" class="btn btn-info">
				<i class="fa fa-arrow-left"></i>
				Retour Ã  la liste
			</a>
		</div>
		<div class="container my-3">
			<table class="table">
				<tbody>
					<tr>
						<td>
							{{ image.descrImg }}
						</td>
						<td>
							{% if image.libImg != "" %}
								<img src="/img/{{ image.libImg }}" alt="{{ image.libImg }}" class="w-25 img-fluid">
							{% else %}
								<img src="/img/default.png" alt="default_image" class="w-25 img-fluid">
							{% endif %}
						</td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="container">
			<div class="row">
				<a href="{{ path('images_edit', {'id': image.id})}}" class="btn btn-info mr-3">
					<i class="fa fa-pen"></i>
					Modifier</a>

				{{ include('images/_delete_form.html.twig') }}
			</div>
		</div>

	</main>

{% endblock %}
