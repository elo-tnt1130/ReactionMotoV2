{% extends 'base.html.twig' %}

{% block title %} Modifier les thèmes du FAQ
{% endblock %}

{% block body %}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mb-3">
		<div class="col-12">
			<h1>Modifier le thème du FAQ -
				{{ themes_faq.themeQuestion }}</h1>
			<a href="{{ path('themes_faq_index') }}" class="btn btn-info">
				<i class="fa fa-arrow-left"></i>
				Retour à la liste
			</a>
		</div>


		<div class="container mt-3">
			{# {{ include('themes_faq/_form.html.twig', {'button_label': 'Update'}) }} #}

				{{ form_start(form)}}
				{{form_label (form.theme_question)}}  <font style="color:red">*</font>
				{{form_widget (form.theme_question)}}
				{{ form_rest(form)}}

			<div class="row mt-3">
				<button type="submit" class="btn btn-info mr-2">
					<i class="fa fa-pen"></i>
					Modifier</button>
				{{ include('themes_faq/_delete_form.html.twig') }}
			</div>
			{{ form_end(form)}}
		</div>

	</main>


{% endblock %}
